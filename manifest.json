{
	"name": "Just Another Facebook Friend",
	"version": "1.0",
	"manifest_version": 2,
	"author":"zzyw studio",

	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},

	"content_scripts": [
		{
			"matches": ["*://*.facebook.com/*"],
			"css": ["libs/sweetalert.css"],
			"js": ["jquery.js", "libs/sweetalert.min.js", "content.js"]
    }
  ],

	"web_accessible_resources": [
		"icon_big.png"
	],

	"page_action": {
		"default_icon": "on.png",
		"default_title": "icon"
	},

	"icons": {
		"19": "on.png",
		"19": "off.png"
	},

	"permissions": [
    "declarativeContent",
	  "https://*.facebook.com/*"

    ]

}
